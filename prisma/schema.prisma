  CLOUD_MIGRATION
  CYBERSECURITY
  IT_SUPPORT
  CONSULTING
  BACKUP_RECOVERY
}

enum LeadStatus {
  NEW
  CONTACTED
  PROPOSAL_SENT
  NEGOTIATION
  WON
  LOST
}